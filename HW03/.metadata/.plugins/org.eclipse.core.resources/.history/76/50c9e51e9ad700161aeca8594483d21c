import java.util.ArrayList;

/**
 * This models a School
 * School is a building
 * Here you have an array of what kids are in school
 * @author zgoold17
 *
 */

public class School extends Building {
	ArrayList<Kid> School = new ArrayList(); // keeps track of kids in school
	
	public School(String name, String address){
		setName(name);
		setAddress(address);
	}
	
	public void addKid(){
		for(int i = 0; i<School.size(); i++){
			Kid a = new Kid();
			School.add(a);
		}
	}
	
}
