
public class Police extends Person implements Employee {
	//variables
	private Role role = Role.Patrol; //default
	
	public enum Role{
		Patrol, Sargent, Captain, Chief;
	}

	
	//set function
	public void setRole(Role r){
		this.role = r;
	}
	
	public Role getRole(){
		return role;
	}

	
}	




