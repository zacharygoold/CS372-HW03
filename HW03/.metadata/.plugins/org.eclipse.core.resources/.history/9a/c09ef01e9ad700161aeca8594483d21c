import java.util.ArrayList;

/**
 * This models the CityHall
 * Here their is an array that holds the police currently in CityHall
 * @author zgoold17
 *
 */

public class CityHall extends Building {
	ArrayList<Police> CityHall = new ArrayList();
	
	public CityHall(String name, String address){
		setName(name);
		setAddress(address);
	
	}
	
	public void addPolice(){
		for (int i = 0; i < CityHall.size(); i++){
			Police a = new Police();
			CityHall.add(a);
		}
	}
	
}
